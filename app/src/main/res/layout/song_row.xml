<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrain_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_black_60"
    >
    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_margin="@dimen/dp_5"
        android:foreground="@drawable/border_iamge_avatar"
        android:padding="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_default_avatar"
        tools:ignore="VectorDrawableCompat"
        />
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:maxLines="2"
        android:text="@string/text_for_testing"
        android:textColor="@color/color_white_100"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/image_avatar"
        />
    <ImageView
        android:id="@+id/image_singer_icon"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/image_avatar"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        app:srcCompat="@drawable/ic_microphone"
        tools:ignore="VectorDrawableCompat"
        />
    <TextView
        android:id="@+id/text_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:maxLines="2"
        android:text="@string/text_for_testing"
        android:textColor="@color/color_berin_90"
        android:textSize="@dimen/sp_16"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@id/image_singer_icon"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        />
</android.support.constraint.ConstraintLayout>
